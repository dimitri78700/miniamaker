{% extends 'base.html.twig' %}

{% block title %}Complétez votre profil
{% endblock %}

{% block body %}
	<div class="vh-100 center">
		<form action={{ path('app_complete') }} method="post" class="border rounded p-3">
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="form-group mb-3">
				<label for="username" class="form-label">Nom d'utilisateur</label>
				<input type="text" class="form-control" id="username" name="username" value="{{ app.user.username ?? '' }}" {{ app.user.username ? 'readonly' : '' }} required minlength="2" maxlength="80">
				<p class="help">2 caractères minimum, uniquement lettres, chiffres et tirets</p>
			</div>
			<div class="form-group mb-3">
				<label for="fullname" class="form-label">Nom complet</label>
				<input type="text" class="form-control" id="fullname" name="fullname" value="{{ app.user.fullname ?? '' }}" {{ app.user.fullname ? 'readonly' : '' }} required minlength="2" maxlength="80">
			</div>
			<button type="submit" class="btn btn-success">Enregistrer</button>
		</form>
	</div>

{% endblock %}
